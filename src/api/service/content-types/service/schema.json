{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 150
    },
    "description": {
      "type": "string",
      "maxLength": 240,
      "required": true
    },
    "priceMin": {
      "type": "decimal"
    },
    "priceMax": {
      "type": "decimal"
    },
    "score": {
      "type": "integer"
    },
    "provider": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::provider.provider"
    },
    "fileImage": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    }
  }
}
