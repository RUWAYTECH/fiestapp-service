{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
		"paths": {
			"@entities/*": ["src/infraestructure/entities/*"],
			"@repositories/*": ["src/infraestructure/repositories/*"],
			"@utils/*": ["src/common/utils/*"],
			"@constants/*": ["src/common/constants/*"],
			"@dto/*": ["src/common/dto/*"],
			"@api/*": ["src/api/*"],
		}
  }
}
